@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client List</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

<h4>
@foreach (Client client in Model)
{
  <li>Client: @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
}
</h4>

<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
<h5>@Html.ActionLink("View all Stylists", "Index", "Stylists")</h5>
<h5>@Html.ActionLink("Add new Client", "Create", "Clients")</h5>

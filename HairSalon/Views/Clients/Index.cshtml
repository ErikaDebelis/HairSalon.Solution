@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client List</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

<h6>
@foreach (Client client in Model)
{
  <li>Client: @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>

  <li>Stylist: @Html.ActionLink($"{client.Stylist.StylistName}", "Details", "Stylists", new {id = client.StylistId})</li>

}
</h6>

  @Html.ActionLink("Home", "Index", "Home")
  @Html.ActionLink("View all Stylists", "Index")
  @Html.ActionLink("Add new Client", "Create", "Clients")

@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Details for @Html.DisplayFor(model => model.ClientName)</h2>

<h3>Stylist:</h3>
<h4>@Html.DisplayFor(model => model.Stylist.StylistName)</h4>

<h3>Preferences/Special Requests:</h3>
<h4>@Html.DisplayFor(model => model.ClientDescription)</h4>

<h5>@Html.ActionLink("Edit Client", "Edit", new {id = Model.ClientId})</h5>
<h5>@Html.ActionLink("Delete Client", "Delete", new {id = Model.ClientId})</h5>
<h5>@Html.ActionLink("View all Clients", "Index")</h5>
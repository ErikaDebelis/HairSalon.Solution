@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new Stylist:</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.StylistName)
  @Html.TextBoxFor(model => model.StylistName, new {required = "required"})

  @Html.LabelFor(model => model.StylistDescription)
  @Html.TextBoxFor(model => model.StylistDescription)

  <input type="submit" value="Add a new Stylist" class="btn btn-outline-warning" />
}

<h6>@Html.ActionLink("Show all Stylists", "Index")</h6>
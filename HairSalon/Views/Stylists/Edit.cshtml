@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this Stylist: @Html.DisplayFor(model => model.StylistName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  <h5>@Html.LabelFor(model => model.StylistName)</h5>
  <h5>@Html.EditorFor(model => model.StylistName)</h5>

  <h5>@Html.LabelFor(model => model.StylistDescription)</h5>
  <h5>@Html.EditorFor(model => model.StylistDescription)</h5>

  <input type="submit" value="Save" class="btn btn-outline-primary" />
}
<h6>@Html.ActionLink("View all Stylists", "Index")</h6>
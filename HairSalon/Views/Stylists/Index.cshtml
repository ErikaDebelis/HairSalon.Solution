@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

<h3>
@foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</h3>

<h4>@Html.ActionLink("Add new Stylist", "Create")     
@Html.ActionLink("Add new Client", "Create", "Clients")     
@Html.ActionLink("Home", "Index", "Home")</h4>
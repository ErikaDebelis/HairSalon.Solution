@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

<h5>
@foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</h5>

<h6>@Html.ActionLink("Add new Stylist", "Create")</h6>
<h6>@Html.ActionLink("Add new Client", "Create", "Clients")</h6>
<h6>@Html.ActionLink("Home", "Index", "Home")</h6>
@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
}

<h4>
  <div class="stylist_list">
@foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
  </div>
</h4>

<h5>@Html.ActionLink("Add new Stylist", "Create")</h5>
<h5>@Html.ActionLink("Add new Client", "Create", "Clients")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>